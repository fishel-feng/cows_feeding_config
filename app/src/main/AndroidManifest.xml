<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fx.cows_feeding_config">

    <application
        android:name="org.litepal.LitePalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.cow.CowActivity" />
        <activity android:name=".activity.fodder.FodderActivity" />
        <activity android:name=".activity.optimize.OptimizeActivity" />
        <activity
            android:name=".activity.fodder.FodderInfoActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activity.cow.CowInfoActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activity.fodder.FodderAddActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activity.cow.CowAddActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".activity.optimize.FodderSelectActivity"></activity>
    </application>

</manifest>